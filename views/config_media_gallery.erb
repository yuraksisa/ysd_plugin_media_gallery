<div class="admin_content_wrapper">
  <div data-alerts="alerts" data-titles="{'success':'<%=t.entitymanagement.success%>','warning':'<%=t.entitymanagement.warning%>','error':'<%=t.entitymanagement.error%>'}" data-fade="10000"></div>
  <form name="variables" action="/api/variables" method="PUT" 
      data-remote="ajax" data-remote-method="PUT">

    <h3><%=t.media_settings.form.storage_group%></h3>

    <%= render_variable_select('media.adapter', t.media_settings.form.adapter, ::Media::ADAPTERS) %>
    <%= render_variable_input_text('media.public_folder_root', t.media_settings.form.public_folder_root, 100, 100) %>
    <%= render_variable_checkbox_boolean('media.use_server_name_folder', t.media_settings.form.use_server_name_folder) %>

    <h3><%=t.media_settings.form.general_group%></h3>

    <%= render_variable_input_text('photo_media_accept', t.media_settings.form.photo_media_accept, 100, 100) %>  
    <%= render_variable_input_text('photo_max_size', t.media_settings.form.photo_max_size, 10, 10) %>  
  
    <div class="formrow-botonera">
  	  <input type="submit" value="<%=t.entitymanagement.update%>" 
  	       class="button blue-button">
    </div>
  </form>
</div>